extends ../layouts/default

block content
    h1 #{foodInfo.name} <span class='group-pill'> #{foodInfo.group.toUpperCase()} </span>
    div.dish-info-thumbnail
        img(src=foodInfo.url)
    p Price: #{foodInfo.price} VNƒê
    
    table.serve-schedule
        caption Serve schedule
            thead 
                tr 
                    th Start serve
                    th End serve
            tbody
                - for (let i = 0; i < foodInfo.startServe.length; ++i)
                    tr 
                        td #{foodInfo.startServe[i]}
                        td #{foodInfo.endServe[i]}